{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type": "process",
			"command": [
				"${command:python.interpreterPath}",
			],
			"args": [
				"-B",
				"${fileBasename}"
			],
			"options": {
				"cwd": "${relativeFileDirname}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"revealProblems": "onProblem"
			},
			"runOptions": {
				"instanceLimit": 20
			}
		},
		{
			"label": "Terminate All Tasks",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}